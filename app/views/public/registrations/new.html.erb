<div class="container">


  <h2>Sign up</h2>
  <div class="col-lg-7 col-md-12 mx-auto ">
  <%= form_with model: @customer,  url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class=" mt-5 mb-3 row">
      <%= f.label :"お名前",class:"col-sm-3  form-label" %>
      <%= f.text_field :name, placeholder:"山田太郎",class:" col-sm-7 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :"ふりがな",class:" col-sm-3 form-label" %>
      <%= f.text_field :name_kana, placeholder:"やまだたろう",class:"col-sm-7 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :email ,class:"col-sm-3 col-form-label"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"example@mail",class:"col-sm-7 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :password,class:"col-sm-3 col-form-label" %>
      <%= f.password_field :password, autocomplete: "new-password",class:"col-sm-7 form-control" %>
      <% if @minimum_password_length %>
      <em>(半角英数 <%= @minimum_password_length %> 文字）</em>
      <% end %>
    </div>

    <div class="row mb-3">
      <%= f.label :password_confirmation,class:"col-sm-3 col-form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-sm-7 form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class:"" %>
    </div>
    </div>
  <% end %>
  </div>

  <%= render "public/shared/links" %>
</div>