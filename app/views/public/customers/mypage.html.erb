

<div><%= flash[:notice] %></div>

<div class="row h4 pb-2 mb-4 text-secondary border-bottom border-warning" >
<h5>profile</h5>
</div>

<% if @customer == current_customer %>
<%= link_to "編集する", edit_customer_path(@customer), class: "" %>
<% end %>

  <%= image_tag @customer.get_image, size: '50x50' %>
  <%= @customer.name %>
  <!--ニックネームもできれば入れたい-->
  <%= @customer.email %>
  <%= @customer.introduction %>

<div class="row h4 pb-2 mb-4 text-secondary border-bottom border-warning" >
<h4>投稿したレシピ一覧</h4>
</div>

<%= render 'recipe', customer_recipe: @customer.recipes %>

<%= link_to " コメント一覧", recipe_comments_path(@customer.comments) %>
<%= link_to "いいねした投稿", recipe_favorites_path(@customer.recipes) %>

