<div class="row mt-5 h4 pb-2 mb-4 text-secondary border-bottom border-warning " >
  <h5 class="col-sm-4">レシピ投稿</h5>
 </div>



<%= form_with model: @recipe, url:recipes_path, local: true do |f| %>

<%= f.hidden_field :customer_id, :value => @customer.id  %>

<div class="form-group">
  <%= f.label :image, "レシピの写真" ,class: "text-secondary border-bottom"  %>
  <span class="text-white bg-secondary"><small>必須</small></span></br>
  <%= f.file_field :image, accept:"image/*" %> <!--accept: "image/*"は画像ファイルのみ投稿可能-->
</div>

<div class="form-group">
  <%= f.label :name, "レシピタイトル" ,class: "text-secondary border-bottom" %>
  <span class="text-white bg-secondary"><small>必須</small></span>
  <%= f.text_field :name, placeholder:"例）クッキー", class: "form-control"%>
 </div>

  <div class="form-group">
  <%= f.label :introduction, "紹介文" ,class: "text-secondary border-bottom"  %>
  <%= f.text_area :introduction,rows: '3', placeholder: "コメントはこちらから！", class: "form-control"%>
 </div>


 <div class="form-group">
  <%= f.label :size, "サイズ" ,class: "text-secondary border-bottom"  %>
  <span class="text-white bg-secondary"><small>必須</small></span>
  <%= f.text_field :size, rows: '3', placeholder: "コメントはこちらから！", class: "form-control" %>
 </div>

 <div class="btn-group dropup" >
  <%= f.label :quantity, "数量" ,class: "text-secondary border-bottom"  %>
  <span class="text-white bg-secondary"><small>必須</small></span></br>
  <%= f.select:quantity, class: "btn btn-secondary dropdown-toggle"%>
  <%#= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]), class:"" %>
 </div>

 <div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
   ボタン
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" href="#">メニュー1</a>
    <a class="dropdown-item" href="#">メニュー2</a>
    <a class="dropdown-item" href="#">メニュー3</a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="#">その他リンク</a>
  </div><!-- /.dropdown-menu -->
</div><!-- /.btn-group -->




  <div class="form-group">
  <%= f.label :point, "point!" ,class: "text-secondary border-bottom"  %>
  <%= f.text_area :point, rows: '3', placeholder: "コメントはこちらから！", class: "form-control" %>
 </div>

 <div class="form-group">
  <%= f.label :ingredient_name, "材料" ,class: "text-secondary border-bottom"  %>
  <span class="text-white bg-secondary"><small>必須</small></span>
  <%= f.text_area :ingredient_name, rows: '3', placeholder: "コメントはこちらから！", class: "form-control" %>
 </div>


 <div class="form-group">
  <%= f.label :process, "作り方" ,class: "text-secondary border-bottom"  %>
  <span class="text-white bg-secondary"><small>必須</small></span>
  <%= f.text_area :process, rows: '3', placeholder: "コメントはこちらから！", class: "form-control" %>
 </div>


 ","を入力することで複数のタグを付けることができます。"
   "例：音楽,文芸,スポーツ"
  <div class="form-group">
   <%= f.label :tag_name, "タグ" ,class: "text-secondary border-bottom"  %>
   <%= f.text_field :tag_name, rows: '3', placeholder: "コメントはこちらから！", class: "form-control" %>
  </div>

 <div class="">
  <%= f.submit "保存", class: "" %>
<% end %>



