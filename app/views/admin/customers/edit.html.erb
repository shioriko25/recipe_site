
<div><%= flash[:notice] %></div>
  <div class="row mt-5 h4 pb-2 mb-4 text-secondary border-bottom border-warning " >
    <h5 class="col"><%= @customer.name %>さんの会員情報編集</h5>
  </div>

  <%= form_with model: @customer, url: admin_customer_path, label: true do |f| %>

    No.<%= @customer.id %>
    <div class="form-group mt-5">
      <%= image_tag @customer.get_image, size: '100x100',class:"rounded-circle" %>
        <span class="text-secondary"><small>　　現在のプロフィール画像</small></span></br>
      <%= f.label :image, "プロフィール画像" ,class: "text-secondary border-bottom mt-4"  %></br>
      <!--accept: "image/*"は画像ファイルのみ投稿可能-->
      <%= f.file_field :image, accept:"image/*" %>
    </div>
    <div class="form-group mt-5">
      <%= f.label :name, "お名前" ,class: "text-secondary border-bottom "  %>
      <%= f.text_field :name, class: "form-control mt-2"%>
    </div>
    <div class="form-group mt-5">
      <%= f.label :name_kana, "ふりがな" ,class: "text-secondary border-bottom "  %>
      <%= f.text_field :name_kana, class: "form-control mt-2" %>
    </div>
    <div class="form-group mt-5">
      <%= f.label :email, "メールアドレス" ,class: "text-secondary border-bottom "  %>
      <%= f.text_field :email, class: "form-control mt-2" %>
    </div>
    <div class="form-group mt-5">
      <%= f.label :introduction, "自己紹介" ,class: "text-secondary border-bottom "  %>
      <%= f.text_area :introduction, class: "form-control mt-2" %>
    </div>
    <div class=" mt-5">
      <%= f.radio_button :is_deleted, :false %><%= f.label :customer_status_false, "有効" %>&emsp;
      <%= f.radio_button :is_deleted, :true %><%= f.label :customer_status_true, "退会" %>
    </div>
    <div class="actions d-grid col-9 mt-5 mx-auto">
      <%= f.submit "会員情報を保存", class: "btn btn-warning btn-block text-white" %>
    </div>
  <% end %>



